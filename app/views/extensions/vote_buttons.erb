<% if logged_in? %>
  <!-- Check if already upvoted -->
  <% if current_user.send("#{@model}_votes").find_by("#{@model}_id = ? AND vote_type = ?", @id, "upvote").nil? %>
    <%= "<form method='post' action='/#{@model}/#{@id}/upvote' name='upvote'>" %>
        <input type=submit value="updoot">
    </form>
  <% else %>
    <%= "<form method='post' action='/#{@model}/#{@id}/remove-vote' name='remove-vote'>" %>
        <input type=submit value="updooted">
    </form>
  <% end %>
  <!-- Check if already downvoted -->
  <% if current_user.send("#{@model}_votes").find_by("#{@model}_id = ? AND vote_type = ?", @id, "downvote").nil? %>
    <%= "<form method='post' action='/#{@model}/#{@id}/downvote' name='downvote'>" %>
        <input type=submit value="downvote">
    </form>
  <% else %>
    <%= "<form method='post' action='/#{@model}/#{@id}/remove-vote' name='remove-vote'>" %>
        <input type=submit value="downvoted">
    </form>
  <% end %>
<% else %>
  <form method='get' action='/login'>
      <input type=submit value="updoot">
  </form>
  <form method='get' action='/login'>
      <input type=submit value="downvote">
  </form>
<% end %>
