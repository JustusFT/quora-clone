<html>
	<head>
		<title>Sinatra Framework</title>
		<!-- Font Awesome -->
		<script src="https://use.fontawesome.com/82532a4ab9.js"></script>

		<!-- jQuery -->
		<script
			  src="https://code.jquery.com/jquery-3.2.1.min.js"
			  integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
			  crossorigin="anonymous"></script>

		<!-- Bootstrap -->
		<!-- Latest compiled and minified CSS -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

		<!-- Optional theme -->
		<!-- <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous"> -->

		<!-- Latest compiled and minified JavaScript -->
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

		<!-- Google Fonts -->
		<link href="https://fonts.googleapis.com/css?family=Noto+Serif:700|Open+Sans" rel="stylesheet">

		<!-- public -->
		<script type="text/javascript" src="/js/application.js"></script>
		<link rel="stylesheet" href="/css/application.min.css">
	</head>
	<body>
		<!-- Modals -->
		<div id="modal-login" class="modal fade" role="dialog">
		  <div class="modal-dialog">
		    <div class="modal-content">
		      <div class="modal-header">
		        <button type="button" class="close" data-dismiss="modal">&times;</button>
		        <h4 class="modal-title">Login</h4>
		      </div>
		      <div class="modal-body">
						<span style="display: inline-block">
							<form method="post" action="/login">
								<div class="row">
									<div class="col-sm-6">
										<label for="user[email]">Email</label>
									</div>
									<div class="col-sm-6">
										<input type="text" placeholder="Email" name="user[email]">
									</div>
								</div>
								<div class="row">
									<div class="col-sm-6">
								    <label for="user[password]">Password</label>
									</div>
									<div class="col-sm-6">
										<input type="password" placeholder="Password" name="user[password]"></br>
									</div>
								</div>
						    <input type=submit value="Sign in">
							</form>
						</span>
		      </div>
		      <!-- <div class="modal-footer">
		        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
		      </div> -->
		    </div>
		  </div>
		</div>

		<!-- Register -->
		<div id="modal-register" class="modal fade" role="dialog">
		  <div class="modal-dialog">
		    <div class="modal-content">
		      <div class="modal-header">
		        <button type="button" class="close" data-dismiss="modal">&times;</button>
		        <h4 class="modal-title">Register</h4>
		      </div>
		      <div class="modal-body">
						<span style="display: inline-block">
							<form method="post" action="/signup">
								<div class="row">
									<div class="col-sm-6">
								    <label for="user[full_name]">Full Name</label>
									</div>
									<div class="col-sm-6">
										<input type="text" placeholder="Full Name" name="user[full_name]">
									</div>
								</div>
								<div class="row">
									<div class="col-sm-6">
								    <label for="user[full_name]">Email</label>
									</div>
									<div class="col-sm-6">
										<input type="text" placeholder="Email" name="user[email]">
									</div>
								</div>
								<div class="row">
									<div class="col-sm-6">
								    <label for="user[full_name]">Password</label>
									</div>
									<div class="col-sm-6">
										<input type="password" placeholder="Password" name="user[password]">
									</div>
								</div>
								<div class="row">
									<div class="col-sm-6">
								    <label for="user[full_name]">Confirm Password</label>
									</div>
									<div class="col-sm-6">
										<input type="password" placeholder="Confirm Password" name="user[password_confirmation]">
									</div>
								</div>
								<input type=submit value="Sign up">
							</form>
						</span>
		      </div>
		      <!-- <div class="modal-footer">
		        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
		      </div> -->
		    </div>
		  </div>
		</div>

		<div id="modal-create-question" class="modal fade" role="dialog">
		  <div class="modal-dialog">
		    <div class="modal-content">
		      <div class="modal-header">
		        <button type="button" class="close" data-dismiss="modal">&times;</button>
		        <h4 class="modal-title">Create Question</h4>
		      </div>
		      <div class="modal-body">
						<span style="display: inline-block">
							<form method='post' action='question/create' id='question'>
								<div class="row">
									<div class="col-sm-6">
									  <label for='question[title]'>Question</label>
									</div>
									<div class="col-sm-6">
										<input type='text' name='question[title]'>
									</div>
								</div>
								<div class="row">
									<div class="col-sm-6">
									  <label for='question[description]'>Description</label>
									</div>
									<div class="col-sm-6">
										<textarea name='question[description]'></textarea>
									</div>
								</div>
							  <input type='submit' value='Submit'>
							</form>
						</span>
					</div>
		      <!-- <div class="modal-footer">
		        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
		      </div> -->
		    </div>
		  </div>
		</div>

		<div id="main-container" class="container-fluid">
			<nav id="main-navbar" class="navbar">
			  <div class="container-fluid">
			    <div class="navbar-header">
			      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#main-navbar">
							test
			      </button>
			      <a class="navbar-brand" href="/">Not Quora</a>
			    </div>
			    <div class="collapse navbar-collapse" id="myNavbar">
			      <ul class="nav navbar-nav navbar-right">
							<% unless logged_in? %>
								<li><a data-toggle="modal" data-target="#modal-login">Create new question</a></li>
							  <li><a data-toggle="modal" data-target="#modal-login">Log in</a></li>
							  <li><a data-toggle="modal" data-target="#modal-register">Register</a></li>
							<% else %>
								<li><a data-toggle="modal" data-target="#modal-create-question">Create new question</a></li>
							  <li><a id="post-logout" href="#">Sign out</a></li>
							  <%= "<li><a href='/user/#{current_user.id}'>#{current_user.full_name}</a></li>" %>
							<% end %>
			      </ul>
			    </div>
			  </div>
			</nav>
			<%= yield %>
		</div>
	</body>
</html>
